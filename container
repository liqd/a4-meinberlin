--write-script
/usr/local/bin/entrypoint
#!/bin/sh

# if no argument, start the shell
if [ -z "$*" ]; then exec ash; fi

export PATH=$PWD/venv/bin:$PWD/node_modules/.bin:$PATH
exec /usr/bin/env "$@"
