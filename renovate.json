{
  "extends": [
    "config:base"
  ],

  "dependencies": {
    "updateTypes": ["minor", "patch"],
    "automerge": true
  },
  "devDependencies": {
    "updateTypes": ["minor", "patch"],
    "automerge": true
  },

  "digest": {
    "enabled": false
  },

  "labels": [
    "renovate"
  ],

  "packageRules": [
      {
        "packagePatterns": ["^eslint"],
        "groupName": "eslint packages"
      },
      {
        "matchPackageNames": ["mapbox-gl"],
        "enabled": false
      }
    ],

  "schedule": ["on tuesday"]
}
